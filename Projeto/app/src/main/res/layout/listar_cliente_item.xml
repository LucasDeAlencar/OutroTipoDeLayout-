<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Representara cada registro do fragment_listar_clientes -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@drawable/perfil_card"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/beje"
            android:layout_margin="5dp"
            app:cardCornerRadius="40dp"
            app:cardElevation="4dp">

    <TextView
        android:id="@+id/txtItemLista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ID, Nome do Cliente"
        android:layout_margin="16dp"
        android:textColor="#148F84"/>
        </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</androidx.appcompat.widget.LinearLayoutCompat>